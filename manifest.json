{

    "manifest_version": 2,
    "name": "TabShui",
    "version": "1.0",
  
    "description": "Limits the amount of possible tabs open",
  
    "icons": {
      "48": "icons/tabs.svg"
    },
    
    "background":{
      "scripts": ["background.js"]
    },

    "permissions":[
      "tabs",
      "storage"
    ],

    "browser_action": {
      "browser_style": true,
      "default_icon": "icons/tabs.svg",
      "default_title": "Tab Shui",
      "default_popup": "popup/popup.html"
    },

    "browser_specific_settings": {
      "gecko": {
        "id": "tab_shui@example.com"
      }
    }
  }