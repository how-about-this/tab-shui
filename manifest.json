{

    "manifest_version": 2,
    "name": "TabShui",
    "version": "1.0",
  
    "description": "Limits the amount of possible tabs open",
  
    "icons": {
      "48": "icons/border-48.png"
    },
    
    "background":{
      "scripts": ["close-tabs.js"]
    },

    "permissions":[
      "tabs",
      "storage"
    ],
    
    "browser_action": {
      "default_icon": "icons/border-48.png",
      "default_title": "Tab Shui",
      "default_popup": "popup/popup.html"
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "tab_shui@example.com"
      }
    }
  }